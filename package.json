{
  "name": "@waves/client-logs",
  "version": "0.0.0",
  "description": "Simple library for logging events",
  "main": "dist/client-logs.min.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npx webpack-cli",
    "prepublish": "npm run build && npm test",
    "postversion": "npm publish",
    "test": "jest"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/wavesplatform/client-logs/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wavesplatform/client-logs"
  },
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^25.1.1",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.5",
    "prettier": "^1.19.1",
    "ts-jest": "^25.1.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "lint-staged": {
    "src/**/*.ts?(x)": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/src/libs/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/*spec.+(ts)",
      "**/test/**/*spec.+(ts)"
    ]
  }
}
